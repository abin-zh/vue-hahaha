
.catogory {
		position: relative;
}
.scroll-view_H {
		white-space: nowrap;
		width: 100%;
		height: 60rpx;
		border-bottom: 1rpx solid #ccc;
}
 ::-webkit-scrollbar{
		display: none;
		width: 0;
		height: 0;
}
.cur-item{
		font-size: 24rpx;
		font-weight: bold;
		color: white;
		background-color: #1296db;
}
.scroll-view-item_H {
		display: inline-block;
		width: 100rpx;
		line-height: 60rpx;
		text-align: center;
		font-size: 16rpx;
		overflow: hidden;
}
.more {
		position: absolute;
		top: 10rpx;
		right: 0;
		background-color: #f5f5f5;
}
.article-item{
		width: 100%;
		height: 100px;
		overflow: hidden;
		margin-top: 16px;
		padding: 0 16px;
		box-sizing: border-box;
}
